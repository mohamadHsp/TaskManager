<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".Fragments.TaskDetailFragment">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginStart="100dp"
        android:background="@color/backgroundTextViewDialogShowTask"
        android:text="Title"/>
    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:padding="8dp"
        android:gravity="center"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginStart="100dp"
        android:background="@color/backgroundTextViewDialogShowTask"
        android:text="Description"/>
    <TextView
        android:id="@+id/des_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:padding="8dp"/>
    <TextView
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:padding="8dp"
        android:gravity="center"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginStart="100dp"
        android:background="@color/backgroundTextViewDialogShowTask"
        android:layout_height="wrap_content"
        android:text="Initial Time"/>
    <TextView
        android:id="@+id/initial_time_text_view"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:padding="8dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginStart="100dp"
        android:padding="8dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:background="@color/backgroundTextViewDialogShowTask"
        android:text="Expire Time"
        />
    <TextView
        android:id="@+id/expire_date_text_view"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:padding="8dp"
        android:layout_height="wrap_content" />
    <CheckBox
        android:id="@+id/done_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:layout_marginStart="50dp"
        android:padding="16dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginLeft="50dp" />



</LinearLayout>